	<div class='container'>
	<% @movies.each do |movie| %> 
		<div class="col-md-10 col-md-offset-1 b_right ">
		 <div class='col-md-3'> <img class="movie_poster" src="<%= movie.img_url %>" size="300px">
		 </div>
			<div class='col-md-6 col-md-offset-1 b_center'>

			<p>English Title:<%= link_to "#{movie.e_title}", movie_path(movie.id) %> </p>
