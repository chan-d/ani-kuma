<div class='row'>
	<div class='container'>
		<div class='col-md-8 col-md-offset-2'>
			<div class="panel panel-default">
			<div class='panel-heading'>Movie info</div>
			<div class="panel-body">
			<div class='col-md-3'> <img class="movie_poster" src="<%= @movie.img_url %>" size="300px">
			 </div>
			<div class='col-md-8 col-md-offset-1'>
				<div class="panel panel-default">
				  <div class="panel-body">
				  	<p><strong>English Title:</strong> <%= @movie.e_title %></p>
					<p><strong>Japanese Title: </strong><%= @movie.j_title %></p>
					<p><strong>Synopsis: </strong><%= @movie.synopsis %></p>
				  </div>
				</div>
		  
			</div>
			</div>
			<div class='panel-footer'> 
			<%= button_to "New Review", "/movies/#{@movie.id}/reviews/new", method: :get,class: "btn btn-warning" %>
			<button class='video_button'> Watch now</button>
			</div>
			</div>
				<div class='video_player'> 
					<% if @movie.id == 10 %>
						<% video_id = '0B82YkbmbDGjzWC16RTBhUExCdjA' %>
					<% elsif @movie.id == 7 %>
						<% video_id = '0B82YkbmbDGjzNDJfRU9lSnVlT1U' %>
					<% elsif @movie.id == 3 %>	
						<% video_id = '0B82YkbmbDGjzS2ozOHJOdGJXYUU' %>
					<% end %>

					<iframe src="https://drive.google.com/file/d/<%= video_id %>/preview" width="600" height="480"></iframe>
				</div>	
		</div>	
	</div>
</div>

<div class='row'> 
	<div class='container'>
		<div class='col-md-8 col-md-offset-2'>
			<div class="panel panel-default">
			<div class='panel-heading'>User Reviews</div>
			  <div class="panel-body">
				<% @movie.reviews.each do |review| %>
				<p> <strong> User Name: </strong><%= review.user_name %></p>
				<p> <strong> Review title: </strong><%= review.title %></p>
				<p> <strong> Review: </strong><%= review.review %></p>
				<hr>
				<% end %>

			  </div>
			</div>
		</div>
	</div>
</div>

