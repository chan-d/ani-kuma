<div class='container'>
	<div class='col-md-8 col-md-offset-2'>
	<div class ='panel panel-warning'>
		<div class='panel-heading'>
			<strong >Edit Your review:</strong>
		</div>
		<div class='panel-body centered_block'>
			<%= form_for @review do |f| %>
		  <p><strong>Title: </strong>
		    <%= f.text_field :title, placeholder: "Title" %></p>
		   
		    <p><%= f.text_area :review, placeholder: "Review", class: "about_me_form" %></p>
		  <%= f.submit "Save Review", class: "btn btn-default" %>
		  <%= button_to "Back", review_path, method: :get, class: "btn btn-default" %>
		<% end %>
		</div>
	</div>
	</div>
</div>