<div class='row'>
	<div class='container'>
		<div class='col-md-8 col-md-offset-2'>
			<div class="panel panel-default">
			<div class='panel-heading'> <h1>Signup!</h1></div>
			<div class='panel-body centered_block'> 

			<%= form_for :user, url: '/users' do |f| %>
			 
			  <p>Full Name: <%= f.text_field :full_name %></p>
			  <p>Email: <%= f.text_field :email %></p>
			  <p>Username: <%= f.text_field :user_name %></p>
			  <p>Password: <%= f.password_field :password %></p>
			  <p>Password Confirmation: <%= f.password_field :password_confirmation %></p>
			  <p><%= f.submit "Submit" %></p>

			<% end %>
			</div>
		</div>
	</div>
</div>
